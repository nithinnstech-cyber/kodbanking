{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "buildCommand": "npm run build -w backend && npm run build -w frontend",
  "outputDirectory": "frontend/dist",
  "framework": "vite"
}